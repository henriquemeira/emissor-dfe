# Server Configuration
PORT=3000
NODE_ENV=development

# Security - IMPORTANT: Change this to a random 32+ character string in production
ENCRYPTION_KEY=change-this-to-a-secure-random-key-with-at-least-32-characters

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage
# Driver: 'fs' (default, local filesystem) or 'blob' (Vercel Blob Storage)
# Automatically set to 'blob' when BLOB_READ_WRITE_TOKEN is present, unless overridden.
STORAGE_DRIVER=fs
DATA_DIR=./data

# Vercel Blob Storage (required when STORAGE_DRIVER=blob)
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...
# BLOB_PREFIX=accounts/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
